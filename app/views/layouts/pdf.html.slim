doctype 5
html
  head
    meta charset='utf-8'
    meta content='width = device-width, initial-scale = 1, maximum-scale = 1, user-scalable = no' name='viewport'
    css:
      @media print {
        @page {
          size: A4;
          margin-top: 2cm;
        }

        .background {
          z-index: -1;
          width: 90%;
          height: auto;
          position: fixed;
          bottom: 0;
          left: 50%;
          transform: translateX(-50%);
        }

        body {
          font-family: Arial, Helvetica, sans-serif;
          font-size: 12pt;
          color: black;
        }

        .logo {
          margin-left: 2cm;
          margin-right: 2cm;
          margin-bottom: 2cm;
        }

        .logo__title {
          font-size: 36pt;
          padding-left: 37mm;
        }

        .main {
          margin-left: 2cm;
          margin-right: 2cm;
          margin-top: 2cm;
          width: 100%;
          display: flex;
          flex-direction: row;
          align-items: flex-start;
        }

        .column--left {
          width: 85mm;
        }

        .column--right {
          width: 65mm;
          margin-left: 3cm;
        }

        .column__header {
          font-size: 16pt;
        }

        .column-table {
          border-collapse: collapse;
          width: 100%
        }

        .column-table__cell {
          border: 1pt solid black;
          padding: 5pt;
          text-align: left;
        }

        .column__signature {
          width: 100%
        }

        .about {
          font-size: 10pt;
          font-style: italic;
          margin-bottom: 3mm;
        }
      }
  body
    = image_tag 'lingu-bg-lg.png', class: 'background'
    = yield
