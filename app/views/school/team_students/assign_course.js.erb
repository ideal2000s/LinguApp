<% if request.post? %>
$('#assign-course-modal').modal('hide');
$('#flash').replaceWith("<%= j(render('layouts/shared/flash', flash: flash )) %>");
$('.assigned-course-block').html("<%= j render 'assigned_course_block', course: course %>")
<% else %>
$("#assign-course-modal").html("<%= j render 'assign_course_form', courses: courses, student: student, current_course_id: current_course_id %>");
$('#assign-course-modal').modal('show');
<% end %>